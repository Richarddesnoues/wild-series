{% extends 'base.html.twig' %}

{% block title %}Série #{{ category.id }}{% endblock %}

{% block body %}
    <div class="media">
        <div class="media-body">
            <h1 class="mt-0">{{ category.name }}</h1>
            {% for program in programs %}
            <div>
                <h1>{{ loop.index }} / {{ program.title }}</h1>
                <p>{{ program.synopsis }}</p>
                <a href="{{ path('category_index') }}">
        Voir l'épisode
    </a>
            </div>
            {% endfor %}
        </div>
    </div>

    <a href="{{ path('category_index') }}">
        Retour à la liste des category
    </a>
{% endblock %}